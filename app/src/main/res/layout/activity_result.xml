<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00bcd4"
    tools:context=".ResultActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="37dp"
        android:layout_marginTop="79dp"
        android:text="Liczba pytań"
        android:textSize="20dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginStart="2dp"
        android:layout_marginTop="38dp"
        android:text="Prawidłowe odpowiedzi"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginStart="0dp"
        android:layout_marginTop="30dp"
        android:text="Błędne odpowiedzi"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="82dp"
        android:text="TextView"
        android:textSize="20dp"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView4"
        android:layout_alignTop="@+id/textView2"
        android:layout_marginEnd="82dp"
        android:text="TextView"
        android:textSize="20dp"
        tools:ignore="RtlCompat"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView4"
        android:layout_alignTop="@+id/textView3"
        android:layout_marginEnd="82dp"
        android:text="TextView"
        android:textSize="20dp"
        tools:ignore="RtlCompat"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/button_again"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView3"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="38dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="30dp"
        android:background="#e0f7fa"
        android:text="Zagraj ponownie"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_quit"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView3"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="38dp"
        android:layout_marginRight="38dp"
        android:layout_marginBottom="30dp"
        android:layout_toEndOf="@+id/button_again"
        android:layout_toRightOf="@+id/button_again"
        android:background="#e0f7fa"
        android:text="Zakończ"
        android:textStyle="bold" />

</RelativeLayout>